<?xml version="1.0" encoding="utf-8"?>
<android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:rowCount="5"
    android:columnCount="2"
    android:padding="5dp"
    android:background="@color/colorNormal"
    tools:context="gdl.dreamteam.skynet.Activities.ZonesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:text="My home"
        android:textAlignment="center"
        android:textSize="30sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        />

    <!--TODO: Restructure the UI-->
    <ImageButton
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="1dp"
        android:layout_column="0"
        android:layout_row="1"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/i01_kitchen"
        android:background="@android:color/transparent"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:text="Kitchen"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_row="2"
        android:layout_column="0"
        android:scaleType="fitStart"/>

    <ImageButton
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="1dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/i02_living_room"
        android:layout_row="1"
        android:layout_column="1"
        android:background="@android:color/transparent"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:text="Living Room"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_row="2"
        android:layout_column="1"
        android:scaleType="fitStart"/>

    <ImageButton
        android:id="@+id/image3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="1dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/i03_bathroom"
        android:layout_row="3"
        android:layout_column="0"
        android:background="@android:color/transparent"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:text="Bathroom"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_row="4"
        android:layout_column="0"
        android:scaleType="fitStart"/>


    <ImageButton
        android:id="@+id/image4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="1dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/i04_main"
        android:layout_row="3"
        android:layout_column="1"
        android:background="@android:color/transparent"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:text="Main Room"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_row="4"
        android:layout_column="1"
        android:scaleType="fitStart"/>





</android.widget.GridLayout>
